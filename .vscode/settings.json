{
	"github.copilot.enable": {
		"*": false,
		"plaintext": false,
		"markdown": false,
		"scminput": false
	},

	// TypeScript и Angular настройки
	"typescript.preferences.includePackageJsonAutoImports": "auto",
	"typescript.suggest.autoImports": true,
	"typescript.preferences.importModuleSpecifier": "relative",

	// Ускорение TypeScript Language Service
	// "typescript.disableAutomaticTypeAcquisition": true,
	// "typescript.suggest.enabled": true,
	// "typescript.validate.enable": true,
	// "typescript.referencesCodeLens.enabled": false,
	// "typescript.implementationsCodeLens.enabled": false,

	// ESLint автофикс
	"editor.codeActionsOnSave": {
		// "source.organizeImports": "explicit", // Отключено, используем только ESLint
		"source.fixAll.eslint": "explicit"
	},

	// Настройки для HTML файлов (Angular шаблоны)
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	// Angular Language Service
	"angular.enable-strict-mode-prompt": false,

	// Исключения для производительности
	"files.exclude": {
		"**/.angular": true,
		"**/node_modules": true,
		"**/dist": true,
		"**/coverage": true
	},
	"files.watcherExclude": {
		"**/.angular/**": true,
		"**/node_modules/**": true,
		"**/dist/**": true,
		"**/coverage/**": true
	},

	// Ограничение поиска для ускорения
	"search.exclude": {
		"**/node_modules": true,
		"**/dist": true,
		"**/.angular": true,
		"**/coverage": true
	}
}
